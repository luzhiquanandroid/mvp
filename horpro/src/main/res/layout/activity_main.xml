<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_bg" />
        <!--android:background="@drawable/shape_bg_white_5_line"-->
        <com.nsbd.zc.horpro.View.ZzHorizontalProgressBar
            android:id="@+id/pb"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="0dp" />
        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:src="@drawable/ic_center_bg" />-->
    </FrameLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:max="8000"
        android:min="800"
        android:progress="1600"
        android:progressDrawable="@drawable/myprogress_style"
        android:thumb="@drawable/oval"
        android:thumbOffset="0dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/shape_circle" />

    <SeekBar
        android:id="@+id/timeline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:maxHeight="6dp"
        android:progressDrawable="@drawable/myprogress_style"
        android:thumb="@drawable/seekbar_thumb" />

    <com.xw.repo.BubbleSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>